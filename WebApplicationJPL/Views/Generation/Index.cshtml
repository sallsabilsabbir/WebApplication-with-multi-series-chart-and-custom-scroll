@model GenerationModels

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    
    <div class="col-6 col-md-6">
        
        <p>
            <a class="btn btn-primary col-6 col-md-6" data-bs-toggle="collapse" href="#collapseTodaysGeneration" role="button" aria-expanded="false" aria-controls="collapseExample">
                Todays Generation
            </a>
        </p>
        <style>
            .tbl-scroll {

                display:block;
                max-height: 550px;
                overflow-y: scroll;
                text-align: center;
            }
        </style>
        <div class="collapse tbl-scroll" id="collapseTodaysGeneration">
            <table class="table table-striped table-bordered " @*id="table_id"*@>

                <thead>
                    <tr>
                        <th>  Time </th>
                        <th>  Todays Generation </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var todaysGeneration in Model.TodaysGenerations)
                    {
                        <tr>
                            @*<td> @row.Time </td>*@
                            <td>@Html.DisplayFor(modelItem=>todaysGeneration.Time)</td>
                            <td> @todaysGeneration.TodaysGeneration1 </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

    <div class="col-6 col-md-6">
        <p>
            <a class="btn btn-primary col-6 col-md-6" data-bs-toggle="collapse" href="#collapseYesterdaysGeneration" role="button" aria-expanded="false" aria-controls="collapseExample">
                Yesterdays Generation
            </a>
        </p>

        <div class="collapse tbl-scroll" id="collapseYesterdaysGeneration">
            <table class="table table-striped table-bordered" @*id="table_id-2"*@>
                <thead>
                    <tr>
                        <th>  Time </th>
                        <th>  Yesterdays Generation </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var yesterdaysGeneration in Model.YesterdaysGenerations)
                    {
                        <tr>
                            @*<td> @row.Time </td>*@
                            <td>@Html.DisplayFor(modelItem=>yesterdaysGeneration.Time)</td>
                            <td> @yesterdaysGeneration.YesterdaysGeneration1 </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>


